{% extends "base.html.twig" %}
{% import "JayAdminBundle:Assets:js_vars.html.twig" as js_bundle %}
{% import "JayAdminBundle:Assets:css_vars.html.twig" as css_bundle %}
{% set title, body_class = 'Login', 'page-login layout-full' %}

{% block body %}

    {% embed "JayAdminBundle:Templates:main_pagecontent.html.twig" %}
        {% set page_main_class = "page animsition vertical-align text-center" %}

        {% block page_header %} {% endblock %}
        {% block page_content %}
<div class="page-content vertical-align-middle text-center">
    <div class="brand">
        <img class="brand-img" src="../../assets/images/logo.png" alt="...">

        <h2 class="brand-text">PAYROLL SYSTEM</h2>
    </div>
    <p></p>

    <form class="form-horizontal" method="post" action="{{ path('jay_payroll_admin_do_login_path') }}" id="formLogin">
        <div class="form-group form-material floating">
            <input type="text" autocomplete="off" class="form-control input-lg text-center" name="username"/>
            <label class="floating-label text-center">Username or Email</label>
        </div>
        <div class="form-group form-material floating">
            <input type="password" class="form-control input-lg text-center" name="password"/>
            <label class="floating-label text-center">Password</label>
        </div>

        <div class="form-group clearfix form-after-text">
            <div class="summary-errors alert alert-danger alert-dismissible"
                 style="display: none; position: relative; top: 20px;">
                <button type="button" class="close" aria-label="Close" data-dismiss="alert">
                    <span aria-hidden="true">Ã—</span>
                </button>
                <p class="msg"><strong>Invalid password or username.</strong></p>
            </div>
            <div class="height-50 vertical-align text-center wizardLoader" style="display: none;">
                <div class="loader vertical-align-middle loader-ellipsis"
                     data-type="default">
                </div>
            </div>
        </div>
        <div class="form-group clearfix margin-top-50">
            <div class="checkbox-custom checkbox-inline pull-left">
                <input type="checkbox" id="inputCheckbox" name="remember">
                <label for="inputCheckbox">Remember me</label>
            </div>
            <a class="pull-right" href="forgot-password.html">Forgot password?</a>
        </div>
        <button type="submit" id="formLoginSubmit" class="btn btn-primary btn-block">VERIFY</button>
    </form>
    {#<p>Still no account? Please go to <a href="register.html">Register</a></p>#}

    {% endblock %}

    {% endembed %}
    {% endblock %}

    {# -- STYLES -----------------------------------#}
    {% block stylesheets %}
        {#-- page --#}
        {% set page_css %}
            {{ css_bundle.css_get_pages(['login']) }}
        {% endset %}
        {#-- override --#}
        {% set css_override %}
            {{ css_bundle.css_get_overrides(['login']) }}
        {% endset %}
        {#-- plugins --#}
        {% set css_plugin %}
            {{ css_bundle.css_get_plugins(['formValidator']) }}
        {% endset %}
        {{ include("JayAdminBundle:Assets:all_admin_css.html.twig") }}
    {% endblock %}

    {# -- JAVASCRIPT -----------------------------------#}
    {% block javascripts %}
    {#-- pages --#}
    {% set pages_js %}
        {{ js_bundle.js_get_pages(['login']) }}
    {% endset %}
    {#-- plugins --#}
    {% set plugin_js %}
        {{ js_bundle.js_get_plugins(['formValidator', 'lada-spin']) }}
    {% endset %}
    {#-- scripts --#}
    {% set scripts_js %}
        {{ js_bundle.js_get_scripts(['material']) }}
    {% endset %}
    {{ include("JayAdminBundle:Assets:all_admin_js.html.twig") }}
{% endblock %}